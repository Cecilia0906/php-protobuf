{
  "name": "basho/protobuf",
  "description": "Protocol Buffer extension for PHP",
  "type": "library",
  "keywords": [
    "protocol buffers",
    "data",
    "pb",
    "serialization",
    "proto",
    "protobuf",
    "allegro",
    "basho"
  ],
  "homepage": "https://github.com/basho/php-protobuf",
  "license": "Apache-2.0",
  "bin": ["bin/protoc-gen-php"],
  "autoload": {
    "psr-0": {
        "": "stubs"
    },
    "psr-4": {"Basho\\Protobuf\\": "src/"}
  },
  "authors": [
    {
      "name": "Christopher Mancini",
      "email": "cmancini@basho.com",
      "homepage": "https://github.com/christophermancini",
      "role": "Author"
    },
    {
      "name": "Hubert JagodziÅ„ski",
      "email": "hubert.jagodzinski@allegro.pl",
      "homepage": "https://github.com/hjagodzinski",
      "role": "Original Author"
    },
    {
      "name": "Mateusz Gajewski",
      "email": "mateusz.gajewski@allegro.pl",
      "homepage": "https://github.com/wendigo",
      "role": "Contributor"
    }
  ],
  "support": {
    "issues": "https://github.com/basho/php-protobuf/issues"
  },
  "require": {
    "php": ">=7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "5.7.*",
    "google/protobuf": "v2.6.1"
  },
  "scripts": {
    "build": [
      "phpize",
      "./configure",
      "make"
    ],
    "clean": "make distclean",
    "phpt": "TRAVIS=1 php run-tests.php -n -d extension_dir=./modules/ -d extension=protobuf.so -P --show-diff --set-timeout 120",
    "test": [
      "@test-extension",
      "@test-generator"
    ],
    "test-extension": [
      "@build",
      "@phpt"
    ],
    "test-generator": [
      "./vendor/bin/phpunit"
    ]
  }
}
